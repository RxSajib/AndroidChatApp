<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <RelativeLayout
        android:id="@+id/Parent"
        android:layout_width="match_parent"
        android:layout_height="390dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/ProfileImageID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/girls"
                android:scaleType="fitXY"
                />



        </RelativeLayout>



      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_marginTop="250dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          >


          <LinearLayout
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/StatasID"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="30dp"
                  android:textStyle="bold" />

          </LinearLayout>

      </android.support.v7.widget.CardView>



    </RelativeLayout>

    <TextView
        android:id="@+id/PersonnameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Parent"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:textStyle="bold"
        android:typeface="monospace" />


    <EditText
        android:id="@+id/nameedittextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name ..."
        android:padding="17dp"
        android:layout_below="@id/PersonnameID"
        android:background="@drawable/edittext_desian"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/statasedittextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Statas ..."
        android:padding="17dp"
        android:layout_below="@id/nameedittextID"
        android:background="@drawable/edittext_desian"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/updateButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:textSize="17dp"
        />


    <Button
        android:id="@+id/updateIMAGEButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:text="Pic image"
        android:textSize="17dp"
        />



</RelativeLayout>