<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">



    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:weightSum="4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/RequestImageID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/RequestnameID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/RequestStatasID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:visibility="invisible"
                        android:id="@+id/AccepectButtonID"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"
                        android:background="@drawable/accepect_layot_desian"
                        android:text="ACCEPT"
                        />
                    <Button
                        android:visibility="invisible"
                        android:id="@+id/DelectedButtonID"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:background="@drawable/deleted_request_desian"
                        android:text="DELETE"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>


</RelativeLayout>